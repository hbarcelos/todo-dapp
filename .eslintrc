{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "plugin:security/recommended",
    "plugin:react/recommended",
    "prettier-standard",
    "prettier/standard",
    "standard-react"
  ],
  "plugins": [
    "react",
    "react-hooks",
    "security"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "jsx-quotes": [
      "error",
      "prefer-double"
    ]
  }
}
